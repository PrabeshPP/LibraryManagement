// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//User Table
model User{
  id String @id @default(uuid())
  firstName String 
  lastName String
  email String @unique
  password String
}

//Author Table
model Author{
  id String @id @default(uuid())
  firstName String
  lastName String
  Book Book[]
}

//Book Table

model Book{
  id String @id @default(uuid())
  bookName String
  authorName String
  isbn String
  summary String
  coverImage String
  authorId String
  author Author @relation(fields: [authorId],references: [id])
}
